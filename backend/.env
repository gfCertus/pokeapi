# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto del servidor
PORT=3000

# Ambiente (development, production)
NODE_ENV=development

# ============================================
# POKEAPI CONFIGURACIÓN
# ============================================

# URL base de PokeAPI
POKEAPI_BASE_URL=https://pokeapi.co/api/v2/

# Tiempo máximo de espera para PokeAPI (milisegundos)
POKEAPI_TIMEOUT=5000

# Número de reintentos para peticiones fallidas
POKEAPI_RETRIES=3

# ============================================
# CACHÉ CONFIGURACIÓN
# ============================================

# Tiempo de vida del caché en segundos (1 hora)
CACHE_TTL=3600

# Tamaño máximo del caché en MB
CACHE_MAX_SIZE=100

# ============================================
# SEGURIDAD
# ============================================

# Clave secreta para JWT (si se implementa autenticación)
JWT_SECRET=your-super-secret-key-change-in-production

# Tiempo de expiración del token en horas
JWT_EXPIRES_IN=24h

# Rate limiting - peticiones por minuto
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# ============================================
# LOGGING
# ============================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ============================================
# CLIENTE FRONTEND
# ============================================

# URL del frontend para CORS
FRONTEND_URL=http://localhost:3001

# ============================================
# SWAGGER
# ============================================

# Habilitar documentación Swagger (true/false)
ENABLE_SWAGGER=true

# Título de la documentación
SWAGGER_TITLE=Pokémon API - Para Estudiantes

# Descripción de la API
SWAGGER_DESCRIPTION=API educativa para aprender sobre Pokémon y desarrollo web