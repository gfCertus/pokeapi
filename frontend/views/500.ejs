<div class="error-page">
    <div class="error-icon">
        <i class="fas fa-exclamation-triangle fa-4x"></i>
    </div>
    
    <h1>500 - Error del servidor</h1>
    
    <p class="error-message">
        Algo salió mal en nuestro servidor. Estamos trabajando para solucionarlo.
    </p>
    
    <div class="error-details card">
        <p><strong>Hora del error:</strong> <span id="error-time"></span></p>
        <p><strong>ID de error:</strong> <span id="error-id"><%= Date.now() %></span></p>
        
        <% if (error && env.isDevelopment) { %>
            <div class="error-stack">
                <h4>Detalles del error:</h4>
                <pre><%= error %></pre>
            </div>
        <% } %>
    </div>
    
    <div class="action-buttons">
        <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i> Volver al inicio
        </a>
        <button onclick="location.reload()" class="btn btn-secondary">
            <i class="fas fa-sync-alt"></i> Recargar página
        </button>
    </div>
</div>

<script>
    // Mostrar hora del error
    document.getElementById('error-time').textContent = new Date().toLocaleString();
</script>