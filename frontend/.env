# ============================================
# CONFIGURACIÓN FRONTEND
# ============================================

# Puerto del frontend
FRONTEND_PORT=3001

# URL de la API backend
API_URL=http://localhost:3000

# Tiempo de cache del navegador (segundos)
BROWSER_CACHE_TTL=3600

# Modo debug (true/false)
DEBUG_MODE=true

# Mostrar información educativa (true/false)
SHOW_EDUCATIONAL_INFO=true

# Límite de Pokémon por página
POKEMON_PER_PAGE=20

# ============================================
# ESTILOS
# ============================================

# Color primario (en hexadecimal)
PRIMARY_COLOR=#FF0000

# Color secundario
SECONDARY_COLOR=#3B4CCA

# Color de fondo
BACKGROUND_COLOR=#F5F5F5

# ============================================
# FEATURES
# ============================================

# Habilitar búsqueda por voz (true/false)
ENABLE_VOICE_SEARCH=false

# Mostrar información técnica (true/false)
SHOW_TECHNICAL_INFO=true

# Habilitar modo oscuro (true/false)
DARK_MODE_ENABLED=false

# ============================================
# ANALYTICS (opcional)
# ============================================

# Google Analytics ID (opcional)
GA_TRACKING_ID=

# Sentry DSN para error tracking (opcional)
SENTRY_DSN=